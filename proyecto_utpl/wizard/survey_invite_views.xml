<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Inherit Form View to Modify it -->
        <record id="survey_invite_view_form" model="ir.ui.view">
            <field name="name">survey.invite.view.form</field>
            <field name="model">survey.invite</field>
            <field name="inherit_id" ref="survey.survey_invite_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form" position="attributes">
                    <attribute name="class">custom_wizard_class</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
